---
interface Props {
  title: string;
  summary: string;
  image: string;
  url: string;
  currentLang: string;
}

const { title, summary, image, url, currentLang } = Astro.props;
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <title>{title.trim()}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />

    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title.trim()} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content="" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.split("//")[1] ?? ""} />
    <meta property="twitter:url" content={url} />
    <meta name="twitter:title" content={title.trim()} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content="" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
    overflow-x: hidden;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  body {
    max-width: 100vw;
    overflow-x: hidden;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.35;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }
  :root {
    --gray: rgb(108, 117, 125);
    --yellow: rgb(255, 193, 7);
    --teal: rgb(23, 162, 184);
    --green: rgb(40, 167, 69);

    --skill-fundamental-bg: var(--gray);
    --skill-fundamental-color: #ffffff;
    --skill-fundamental-border: var(--gray);
    --skill-fundamental-hover-shadow: rgba(108, 117, 125, 0.25);
    --skill-fundamental-hover-border: var(--gray);
    --skill-intermediate-bg: var(--yellow);
    --skill-intermediate-color: #212529;
    --skill-intermediate-border: var(--yellow);
    --skill-intermediate-hover-shadow: rgba(255, 193, 7, 0.25);
    --skill-intermediate-hover-border: var(--yellow);
    --skill-proficient-bg: var(--teal);
    --skill-proficient-color: #ffffff;
    --skill-proficient-border: var(--teal);
    --skill-proficient-hover-shadow: rgba(23, 162, 184, 0.25);
    --skill-proficient-hover-border: var(--teal);
    --skill-expert-bg: var(--green);
    --skill-expert-color: #ffffff;
    --skill-expert-border: var(--green);
    --skill-expert-hover-shadow: rgba(40, 167, 69, 0.25);
    --skill-expert-hover-border: var(--green);
  }
</style>
