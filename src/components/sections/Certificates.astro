---
import Section from "../Section.astro";
import { useTranslation, getCVSection } from "@/utils/language-context";
import { formatYearMonth, formatYearMonthDay } from "@/utils/date-formatter";

const certificates = getCVSection("certificates");
const t = useTranslation();
---

<Section title={t("certificates.title")}>
  <ul>
    {
      certificates.map(({ name, date, issuer, url, score }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    {url ? (
                      <a
                        href={url}
                        title={`${t("certificates.view", { name })}`}
                        target="_blank"
                      >
                        {name}
                      </a>
                    ) : (
                      name
                    )}
                  </h3>
                  {issuer && <p class="issuer">{issuer}</p>}
                </div>
                <time data-title={formatYearMonthDay(date, t)}>
                  {formatYearMonth(date, t)}
                </time>
              </header>
              {score && (
                <footer>
                  <p class="score">{`${t("certificates.score")} ${score}`}</p>
                </footer>
              )}
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 21px;
  }

  article {
    border-left: 3px solid var(--certificate-border);
    padding-left: 16px;
    transition: border-color 0.2s ease;
  }

  article:hover {
    border-left-color: var(--certificate-active-border);
  }

  article h3 {
    font-weight: 500;
    color: var(--heading-primary);
    margin-bottom: 4px;
  }

  article a:hover {
    text-decoration: underline;
    cursor: pointer;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
  }

  .issuer {
    color: var(--highlight-color);
    font-size: 0.9rem;
    margin: 0;
  }

  time {
    color: var(--time-color);
    font-size: 0.85rem;
    min-width: fit-content;
    cursor: default;
  }

  [data-title] {
    position: relative;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: var(--tooltip-bg);
    color: var(--tooltip-color);
    font-size: 0.75rem;
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      monospace;
    position: absolute;
    padding: 0.2rem 0.5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px var(--tooltip-border);
    opacity: 0;
    border: 1px solid var(--tooltip-border);
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  .score {
    color: var(--highlight-color);
    font-size: 0.9rem;
    font-weight: 500;
    margin: 0;
  }

  @media (width <= 700px) {
    header {
      flex-direction: column;
      gap: 4px;
    }

    time {
      align-self: flex-start;
    }
  }

  /* Print styles */
  @media print {
    article {
      border-left: none;
      padding-left: 0;
    }

    header {
      flex-direction: column;
      margin-bottom: 4px;
    }

    time {
      align-self: flex-start;
    }

    .score {
      font-size: 0.85rem;
    }
  }
</style>
