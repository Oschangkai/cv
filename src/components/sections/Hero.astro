---
const { name, label, image, location, profiles, phone, email, url } =
  getCVSection("basics");
import Section from "@/components/Section.astro";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import X from "@/icons/X.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import GitHub from "@/icons/GitHub.astro";
import WorldMap from "@/icons/WorldMap.astro";
import type { SocialIcon } from "@/types";
import { useTranslation, getCVSection } from "@/utils/language-context";

const { city, region } = location;
const t = useTranslation();

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
  X,
};

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn");
const linkedUrl = linkedInfo?.url;

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" â€¢ ");
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <span class="world-map-icon">
          <WorldMap />
        </span>
        {city}
        {city && region && ","}
        {region}
      </span>
      <footer class="print">
        {printInfo}
      </footer>
      {url && <footer class="print">{url}</footer>}
      <footer class="no-print">
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={t("contact.email.title", { name })}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={t("contact.phone.title", { name })}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network];

            return (
              <a
                href={url}
                title={t("contact.profile.title", { name, network })}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
    flex: 2;
  }

  figure {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    color: var(--heading-tertiary);
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
  }

  span {
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  .world-map-icon {
    width: 12px;
    height: 12px;
  }

  footer {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      monospace;
    color: var(--time-color);
    font-size: 0.65rem;
    display: flex;
    gap: 6px;
    margin-top: 8px;
  }
  footer.print {
    font-size: 0.8rem;
  }

  footer a {
    color: var(--social-link-color);
    background-color: var(--social-link-bg);
    backdrop-filter: blur(2px);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--social-link-border);
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  footer a:hover {
    background: var(--social-link-hover-bg);
    border: 1px solid var(--social-link-border);
  }

  @media (width <= 700px) {
    .container {
      flex-direction: column-reverse;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h2 {
      text-wrap: balance;
    }

    figure {
      margin: 0 auto;
    }
  }
</style>
